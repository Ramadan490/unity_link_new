{
  "compilerOptions": {
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"],
      "@/types/*": ["shared/types/*"],
      "@/utils/*": ["utils/*"],
      "@/features/*": ["features/*"],
      "@/shared/*": ["shared/*"],
      "@/config/*": ["shared/config/*"],
      "@/context/*": ["shared/context/*"],
      "@/hooks/*": ["shared/hooks/*"],
      "@/constants/*": ["shared/constants/*"]
    },
    "typeRoots": ["./node_modules/@types", "./shared/types"]
  },
  "extends": "expo/tsconfig.base",
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "shared/types/**/*.d.ts"
  ]
}
